<?xml version="1.0" encoding="UTF-8"?>

<configuration scan="true">
    <include resource="org/springframework/boot/logging/logback/base.xml"/>
    <appender name="receivedMessage_appender1" class="ch.qos.logback.core.FileAppender">
        <file>logs/user_records.log</file>
        <filter class="ch.qos.logback.core.filter.EvaluatorFilter">
            <evaluator class="ch.qos.logback.classic.boolex.OnMarkerEvaluator">
                <marker>operationRecord</marker>
            </evaluator>
            <OnMismatch>DENY</OnMismatch>
            <OnMatch>NEUTRAL</OnMatch>
        </filter>
        <encoder>
            <pattern>%d{yy-MM-dd HH:mm:ss} - %m%n</pattern>
        </encoder>
    </appender>
    <appender name="receivedMessage_appender2" class="ch.qos.logback.core.FileAppender">
        <file>logs/api_records.log</file>
        <filter class="ch.qos.logback.core.filter.EvaluatorFilter">
            <evaluator class="ch.qos.logback.classic.boolex.OnMarkerEvaluator">
                <marker>cust</marker>
            </evaluator>
            <OnMismatch>DENY</OnMismatch>
            <OnMatch>NEUTRAL</OnMatch>
        </filter>
        <encoder>
            <pattern>%d{yy-MM-dd HH:mm:ss} - %m%n</pattern>
        </encoder>
    </appender>
    <logger name="com.whjryf.opra">
        <appender-ref ref="receivedMessage_appender1"/>
        <appender-ref ref="receivedMessage_appender2"/>
    </logger>
    <!-- The FILE and ASYNC appenders are here as examples for a production configuration -->
